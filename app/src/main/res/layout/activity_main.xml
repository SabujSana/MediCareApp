<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/background"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.medicare.MainActivity">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/bNakKanGola"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:text="নাক,কান,গলা"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="#0703fc" />

            <Button
                android:id="@+id/bMathaMuk"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/bNakKanGola"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="#0703fc"
                android:text="মাথা ও মুখ" />

            <Button
                android:id="@+id/bPet"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="#0703fc"
                android:layout_below="@+id/bMathaMuk"
                android:text="পেট" />

            <Button
                android:id="@+id/bTak"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="#0703fc"
                android:layout_below="@+id/bPet"
                android:text="ত্বক" />

            <Button
                android:id="@+id/bPorsab"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="#0703fc"
                android:layout_below="@+id/bTak"
                android:text="প্রস্রাব" />

            <Button
                android:id="@+id/bRokto"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="#0703fc"
                android:layout_below="@+id/bPorsab"
                android:text="রক্ত" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
